<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_car_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin_add_moving_assistance"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Needed Customer Information"
                android:textAlignment="center"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/needCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer First and Last Name" />

            <RadioButton
                android:id="@+id/needDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Birth" />

            <RadioButton
                android:id="@+id/needCurrentAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Address" />

            <RadioButton
                android:id="@+id/needEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email" />


            <RadioButton
                android:id="@+id/needTimeDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick Up and Drop of Time" />

            <RadioButton
                android:id="@+id/needStartAndEndLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stat and End Location" />

            <RadioButton
                android:id="@+id/needExpectedNumberOfBoxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expected Number of Boxes" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Moving Team Information"
                android:textAlignment="center"
                android:textSize="24sp" />


            <EditText
                android:id="@+id/numberOfMovers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Number of Movers"
                android:inputType="numberSigned" />


            <EditText
                android:id="@+id/hourlySetRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Price per Hour"
                android:inputType="numberDecimal" />



            <Button
                android:id="@+id/confirmAndAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm and Add" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>